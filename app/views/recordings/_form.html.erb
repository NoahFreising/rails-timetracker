<%= form_with model: recording do |f| %>
<fieldset>
    <%= f.label :topic %><br />
    <%= f.select(:topic_id, Topic.all.collect {|a| [a.name, a.id]}) %> <br />
    <%= f.label :title %><br />
    <%= f.text_field :title %> <br />
    <%= f.label :comment %><br />
    <%= f.text_area :comment %> <br />
    <%= f.label :starts_at %> <br />
    <%= f.datetime_field :starts_at %> <br />
    <%= f.label :ends_at %> <br />
    <%= f.datetime_field :ends_at %> <br />
    <%= f.submit %>
</fieldset>
<% end %> 